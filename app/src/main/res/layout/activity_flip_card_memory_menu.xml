<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/fcm_background_menu"
    tools:context=".FlipCardMemory_Menu">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMEMBERY"
        android:textColor="#db414d"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <HorizontalScrollView
        android:id="@+id/theme_list"
        android:layout_width="370dp"
        android:layout_height="230dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.40"
        android:scrollbars="none">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/number_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="165dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/fcm_number_theme" />

                <TextView
                    android:id="@+id/txt_number_theme"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numbers"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:textColor="@color/cardview_light_background"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/letter_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="165dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/fcm_word_theme" />

                <TextView
                    android:id="@+id/txt_letter_theme"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Letters"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:textColor="@color/cardview_light_background"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/food_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="165dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/fcm_food_theme" />

                <TextView
                    android:id="@+id/txt_food_theme"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:textColor="@color/cardview_light_background"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/animal_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="165dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/fcm_animal_theme" />

                <TextView
                    android:id="@+id/txt_animal_theme"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Animals"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:textColor="@color/cardview_light_background"/>
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>

    <TableLayout
        android:id="@+id/box_size"
        android:layout_width="355dp"
        android:layout_height="144dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95">

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/size_3x2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/size_3x2" />

            <ImageView
                android:id="@+id/size_4x3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/size_4x3" />

            <ImageView
                android:id="@+id/size_4x4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/size_4x4" />

            <ImageView
                android:id="@+id/size_5x4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/size_5x4" />

            <ImageView
                android:id="@+id/size_6x5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/size_6x5" />

            <ImageView
                android:id="@+id/size_8x5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/size_8x5" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find all pair before time expires."
        android:textColor="#ffff"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.741" />

    <Spinner
        android:id="@+id/spinner_ModeGame"
        android:layout_width="168dp"
        android:layout_height="40dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.682" />

    <ImageView
        android:id="@+id/achievement"
        android:layout_width="35dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.683"
        android:background="@drawable/achievement"
        tools:srcCompat="@drawable/achievement" />

</androidx.constraintlayout.widget.ConstraintLayout>